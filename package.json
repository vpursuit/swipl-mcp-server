{
  "name": "@vpursuit/workspace",
  "version": "1.0.0",
  "description": "Monorepo for Model Context Protocol packages with SWI-Prolog integration",
  "private": true,
  "type": "module",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "prolog",
    "swi-prolog",
    "monorepo",
    "workspace",
    "plugin-system"
  ],
  "workspaces": [
    "products/*",
    "plugins/server/*",
    "plugins/client/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@vpursuit/swipl-mcp-server",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "server": "npm run server --workspace=@vpursuit/swipl-mcp-server",
    "inspect": "npm run inspect --workspace=@vpursuit/swipl-mcp-server",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,js,json,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,yml,yaml}\"",
    "clean": "npm run clean --workspaces --if-present",
    "clean:full": "npm run clean --workspaces --if-present && rm -rf node_modules products/*/node_modules plugins/*/node_modules plugins/*/*/node_modules",
    "security:audit": "npm audit --workspaces --audit-level=moderate",
    "security:check": "npm audit --workspaces --audit-level=high --json | jq -r '.vulnerabilities | length' | xargs -I {} test {} -eq 0",
    "security:update": "npm update --workspaces && npm audit fix --workspaces",
    "changelog": "node scripts/generate-changelog.js",
    "preversion": "npm run changelog && git add CHANGELOG.md",
    "version:patch": "npm version patch -w @vpursuit/swipl-mcp-server --git-tag-version=true",
    "version:minor": "npm version minor -w @vpursuit/swipl-mcp-server --git-tag-version=true",
    "version:major": "npm version major -w @vpursuit/swipl-mcp-server --git-tag-version=true",
    "version:prerelease": "npm version prerelease --preid=beta -w @vpursuit/swipl-mcp-server --git-tag-version=true",
    "release:patch": "npm run version:patch && git push origin main && git push origin --tags",
    "release:minor": "npm run version:minor && git push origin main && git push origin --tags",
    "release:major": "npm run version:major && git push origin main && git push origin --tags",
    "release:prerelease": "npm run version:prerelease && git push origin main && git push origin --tags"
  },
  "author": "Peter Trebing",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vpursuit/model-context-lab.git"
  },
  "homepage": "https://github.com/vpursuit/model-context-lab#readme",
  "bugs": {
    "url": "https://github.com/vpursuit/model-context-lab/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.3.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  }
}