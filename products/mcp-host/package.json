{
  "name": "@vpursuit/mcp-host",
  "version": "0.1.0",
  "description": "Generic MCP host for managing multiple Model Context Protocol servers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build:plugin": "cd ../.. && npm run build -w @vpursuit/mcp-client-host",
    "build:bundle": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "build": "npm run build:plugin && npm run build:bundle && npm run build:types",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.10.2",
    "@vpursuit/mcp-client-host": "workspace:*",
    "rollup": "^4.30.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "openai": "^4.0.0 || ^5.0.0 || ^6.0.0"
  },
  "peerDependenciesMeta": {
    "openai": {
      "optional": true
    }
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "openai",
    "tools",
    "function-calling"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vpursuit/model-context-lab.git",
    "directory": "products/mcp-host"
  },
  "license": "MIT"
}
