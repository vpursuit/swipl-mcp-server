{
  "compilerOptions": {
    // Target and module for Rollup
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // Strict type checking
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    // No emit - Rollup handles output
    "noEmit": false,
    "declaration": false,
    "sourceMap": true,

    // Output
    "outDir": "./dist",

    // Path mappings for workspace packages
    // TypeScript will use package.json to find main/types fields
    "baseUrl": ".",
    "paths": {
      "@vpursuit/mcp-server-core": ["../../node_modules/@vpursuit/mcp-server-core"],
      "@vpursuit/mcp-server-prolog": ["../../node_modules/@vpursuit/mcp-server-prolog"],
      "@vpursuit/mcp-server-roots": ["../../node_modules/@vpursuit/mcp-server-roots"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
