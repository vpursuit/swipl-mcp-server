{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "types": ["vitest/globals", "node"],
    "noEmit": true
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.js",
    "../src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
