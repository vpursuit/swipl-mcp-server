{
  "name": "@vpursuit/swipl-mcp-server",
  "version": "3.0.0",
  "type": "module",
  "icon": "./images/logo.svg",
  "description": "SWI-Prolog integration for Model Context Protocol - orchestrator package",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "prolog",
    "swi-prolog",
    "ai",
    "agent",
    "llm"
  ],
  "author": "Peter Trebing",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vpursuit/swipl-mcp-server.git",
    "directory": "packages/swipl-mcp-server"
  },
  "homepage": "https://github.com/vpursuit/swipl-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/vpursuit/swipl-mcp-server/issues"
  },
  "bin": {
    "swipl-mcp-server": "./build/index.js"
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "default": "./build/index.js"
    }
  },
  "files": [
    "build",
    "images",
    "README.md",
    "SECURITY.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf build *.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:npx": "vitest run --project=swipl-mcp-server -t 'NPX Integration'",
    "prepublishOnly": "npm run build && npm run test:npx"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@vpursuit/mcp-core": "*",
    "@vpursuit/mcp-roots": "*",
    "@vpursuit/mcp-prolog": "*"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
